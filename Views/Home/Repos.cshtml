@model List<GitRepos.Models.Repository>
@{
    ViewData["Title"] = "Repos";
}

<div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Stars</th>
                    <th scope="col">Url</th>
                    <th scope="col">Created at</th>
                    <th scope="col">Updated at</th>
                    <th scope="col">Details</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var repo in Model)
            {
                <tr>
                    <th scope="row">@repo.Id</th>
                    <td>@repo.Name</td>
                    <td>@repo.StargazersCount</td>
                    <td>@repo.GitUrl</td>
                    <td>@DateTimeOffset.FromUnixTimeSeconds(repo.CreatedAt).ToString("dd-mm-yy")</td>
                    <td>@DateTimeOffset.FromUnixTimeSeconds(repo.UpdatedAt).ToString("dd-mm-yy")</td>
                    <td>
                        <a href="/Home/GetDetails?repoId=@repo.Id">
                            <button id="show-details" type="button" class="btn btn-primary" value="@repo.Id">Details</button>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
